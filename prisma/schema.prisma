generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator erdSvg {
  provider = "prisma-erd-generator"
  output   = "../docs/ERD.svg"
}

generator erdPng {
  provider = "prisma-erd-generator"
  output   = "../docs/ERD.png"
}

generator prismaCustomClassGenerator {
  provider = "ts-node ./prisma/custom-generator.ts"
  output   = "../src/_gen"
}

